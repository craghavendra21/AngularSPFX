{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@microsoft"
    ],
    "lib": [
      "es2018",
      "dom",
      "es2015.collection"
    ],
    "types": [
      "es6-promise",
      "webpack-env"
    ],
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
